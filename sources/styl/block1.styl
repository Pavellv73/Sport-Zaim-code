.block1
  width 100%
  height auto
  background linear-gradient(105deg, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 80%, rgba(254,163,6,1) 80%, rgba(254,163,6,1) 100%)
  -webkit-box-shadow: 0 1px 13px -2px rgba(0,0,0,0.75);
  -moz-box-shadow: 0 1px 13px -2px rgba(0,0,0,0.75);
  box-shadow: 0 1px 13px -2px rgba(0,0,0,0.75);
  margin-bottom 13px
  position relative
  z-index 1
  overflow hidden
  @media (min-width 768px)
    background linear-gradient(105deg, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 68%, rgba(254,163,6,1) 68%, rgba(254,163,6,1) 100%)


  @media (min-width 1240px)
    background-image  url("img/sport.png"), linear-gradient(105deg, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 45%, rgba(254,163,6,1) 45%, rgba(254,163,6,1) 100%)
    &:before
      content ""
      width 894px
      height 663px
      background-image  url("img/sport.png")
      background-position top right
      background-size 100%
      background-repeat no-repeat
      position absolute
      top 105px
      right calc(50vw - 350px)


  .block1-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column
    padding-top 52px
    @media (min-width 768px)
      display flex
      justify-content flex-start
      align-items flex-start
      flex-direction column
    @media (min-width 1240px)
      flex-direction row
      justify-content space-between


    .block1-head
      width 100%
      height auto
      margin-bottom 37px
      margin-top 59px
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 768px)
        width 100%
        margin-bottom 60px
      @media (min-width 1240px)
        margin-top 183px
        justify-content center
        align-items flex-start
        flex-direction column



