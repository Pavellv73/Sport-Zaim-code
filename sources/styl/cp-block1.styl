.cp-block1
  width 100%
  height auto
  background-image url("img/bg.png")
  background-size auto
  background-repeat repeat-x
  background-color #ffffff
  background-position bottom

  .cp-block1-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 53px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 150px
      padding-bottom 68px

    .cp-block1-head
      width 100%
      height auto
      margin-bottom 24px
      @media (min-width 768px)
        margin-bottom 40px

      h2
        font-family "Proxima Nova Bold"
        font-size 24px
        font-weight 900
        text-transform uppercase
        color #1f1d21
        margin-bottom 8px
        @media (min-width 768px)
          font-size 30px

          br
            display none

      p
        color #333333
        font-family "GillSansLightC"
        font-size 18px
        font-weight 300
        letter-spacing 1px
        text-align left
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          letter-spacing 1px

          br
            display none


    .cp-steps-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-flow row wrap
      position relative
      @media (min-width 768px)
        align-items flex-start

      .cp-step-block
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 42px
        z-index 1
        @media (min-width 768px)
          width 50%
          margin-bottom 31px
        @media (min-width 1280px)
          width 25%
          margin-bottom 0

        .cp-step-img
          width 89px
          height 89px
          box-shadow 0 1px 20px rgba(0, 0, 0, 0.1)
          background-color #29272c
          border-radius 100%
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          margin-bottom 20px
          @media (min-width 1280px)
            justify-content center

          img
            width 53px
            height 53px


        .cp-step-head
          width 100%
          height auto
          @media (min-width 768px)
            width 280px
          @media (min-width 1280px)
            width 220px

          h3
            color #29272c
            font-family "Proxima Nova Bold"
            font-size 18px
            font-weight 900
            letter-spacing 0.5px
            line-height 20px
            text-transform uppercase
            @media (min-width 768px)
              text-align center
            @media (min-width 1280px)
              text-align center

              br
                display block


      .line
        display none
        width 277px
        height 1px
        background-color #000000
        opacity 0.49
        margin-bottom 22px
        @media (min-width 768px)
          display block

      .o-l
        @media (min-width 768px)
          position absolute
          top 44px
          width 270px
          left 220px
        @media (min-width 1280px)
          top 43px
          left 167px
          width 180px
      .tr-l
        @media (min-width 768px)
          position absolute
          width 270px
          top 56%
          left 220px
        @media (min-width 1280px)
          top 43px
          left 600px
          width 270px

      .t-l
        @media (min-width 768px)
          display none
        @media (min-width 1280px)
          display block
          position absolute
          top 43px
          left 390px
          width 270px


