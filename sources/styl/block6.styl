.block6
  width 100%
  height auto
  background-color #ffc200
  @media (min-width 768px)
    padding-right 57px
    padding-left 57px
  @media (min-width 1280px)
    padding-right 170px
    position relative
    &:before
      content ""
      width 486px
      height 421px
      background-image url("img/runner.png")
      background-size 100%
      background-position center
      background-repeat no-repeat
      position absolute
      bottom -4px
      left calc(50vw - 654px)


  .block6-content
    width 100%
    height auto
    padding-top 32px
    padding-bottom 23px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 51px
      padding-bottom 40px
    @media (min-width 1280px)
      display flex
      display -webkit-flex
      justify-content flex-end
      align-items flex-end


    .block6-head
      width 100%
      height auto
      margin-bottom 32px

      h2
        color #29272c
        font-family "Proxima Nova Bold"
        font-size 20px
        font-weight 900
        text-transform uppercase
        text-align right
        margin-bottom 8px

        br
          display none
        @media (min-width 768px)
          font-size 30px
          font-weight 900
          line-height 36px

          br
            display block

      p
        color #29272c
        font-family "Proxima Nova Lt"
        font-size 18px
        letter-spacing 0
        font-weight 300
        text-align right
        b
          font-weight 700
        br
          display none
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          letter-spacing 0
        @media (min-width 1280px)
          br
            display block




    .borrowing-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 1280px)
        justify-content center
        align-items flex-end

      .borrowing
        width 282px
        height auto
        box-shadow 0 0 10px rgba(122, 122, 122, 0.4)
        border-radius 4px
        background-color #29272c
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        @media (min-width 768px)
          width 650px
          flex-direction row
          padding-top 28px
          padding-bottom 20px

        .sum-block
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          @media (min-width 768px)
            width 60%

          .borrowing-sum
            width 100%
            padding-top 28px
            padding-bottom 16px
            padding-left 14px
            box-sizing border-box
            padding-right 14px
            display flex
            display -webkit-flex
            justify-content space-between
            align-items flex-start
            flex-direction row
            margin-bottom 20px
            @media (min-width 768px)
              align-items center
              justify-content space-around
              margin-bottom 0
              padding-top 0
              padding-bottom 0
            @media (min-width 1280px)
              margin-bottom 21px



            .sum
              display flex
              display -webkit-flex
              justify-content center
              align-items center
              flex-direction row
              width 149px


              p
                color #feb709
                font-family "Proxima Nova Lt"
                font-size 14px
                font-weight 400
                text-transform uppercase
                @media (min-width 768px)
                  font-size 18px
                  line-height 19px



            p
              color #feb709
              font-family "Proxima Nova Lt"
              font-size 24px
              font-weight 100
              letter-spacing 1px
              @media (min-width 768px)
                font-size 30px
                line-height 32px
                font-weight 100

              span.cur
                font-size 16px
                font-weight 400
                letter-spacing 1px
                @media (min-width 768px)
                  font-size 18px
                  line-height 20px


          input[type=range]
            height: 2px
            -webkit-appearance none
            margin 10px 0
            width 80%
            @media (min-width 768px)
              width 80%

          input[type=range]:focus
            outline none

          input[type=range]::-webkit-slider-thumb
            box-shadow 0px 0px 0px #000000
            border 0px solid #2497E3
            height 12px
            width 12px
            border-radius 25px
            background #FFFFFF
            cursor pointer
            -webkit-appearance none

          input[type=range]::-moz-range-thumb
            box-shadow 0px 0px 0px #000000
            border 0px solid #2497E3
            height 12px
            width 12px
            border-radius 25px
            background #FFFFFF
            cursor pointer

          input[type=range]::-ms-thumb
            margin-top 1px
            box-shadow 0px 0px 0px #000000
            border 0px solid #2497E3
            height 12px
            width 12px
            border-radius 25px
            background #FFFFFF
            cursor pointer

          p
            color #ffc200
            font-family "Proxima Nova Lt"
            font-size 13px
            line-height 14px
            font-weight 300
            letter-spacing 1px
            text-align center
            @media (min-width 768px)
              br
                display none
            @media (min-width 1280px)
              font-size 14px


        .application
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          padding-top 24px
          padding-bottom 12px
          box-sizing border-box
          @media (min-width 768px)
            width 40%
            padding-top 0
            padding-bottom 0

          button
            width 222px
            height 47px
            border-radius 3px
            border 3px solid #ffc200
            background-color #29272c
            color #ffffff
            font-family "DINPro"
            font-size 18px
            font-weight 600
            letter-spacing 1px
            margin-bottom 12px
            transition all 0.2s ease
            cursor pointer
            &:hover
              background-color #ffc200
              color #29272c
            //@media (min-width 768px)
            //  margin-bottom 12px
            //@media (min-width 1280px)
            //  margin-bottom 25px

          p
            color #ffc200
            font-family "Proxima Nova Lt"
            font-size 13px
            line-height 14px
            font-weight 300
            letter-spacing 1px
            @media (min-width 768px)
              font-size 13px
              font-weight 300

