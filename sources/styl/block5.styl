.block5
  width 100%
  height auto
  .block5-content
    width 100%
    height auto
    padding-top 43px
    padding-bottom 55px
    @media (min-width 768px)
      padding-top 64px
      padding-bottom 84px
    .block5-head
      width 100%
      height auto
      margin-bottom 39px
      @media (min-width 768px)
        margin-bottom 65px
      h2
        font-family "Proxima Nova Bold"
        font-size 24px
        font-weight 900
        text-transform uppercase
        color #1f1d21
        margin-bottom 8px
        line-height 28px
        br
          display none
        span
          color #fca70b
          letter-spacing 1px
        @media (min-width 768px)
          font-size 30px
          font-weight 900
          br
            display block
        @media (min-width 1280px)
          br
            display none
      p
        color #29272c
        font-family "Proxima Nova Lt"
        font-size 18px
        font-weight 300
        letter-spacing 1px
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          br
            display none
    .maps
      width 100%
      height 255px
      background-image url("img/map.png")
      background-position center
      background-size 100%
      background-repeat no-repeat
      @media (min-width 768px)
        height 344px
        background-size auto 344px
      @media (min-width 1280px)
        height 490px
        background-size auto 441px
        max-width 901px