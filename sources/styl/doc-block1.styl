.doc-block1
  width 100%
  height auto
  background-color #ffffff

  .doc-block1-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 40px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 150px
      padding-bottom 68px
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

    .doc-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width 768px)
        margin-bottom 40px

      h2
        color #1f1d21
        font-family "Proxima Nova Bold"
        font-size 26px
        letter-spacing 0.89px
        text-transform uppercase
        line-height 28px
        text-align center
        margin-bottom 6px
        @media (min-width 768px)
          font-size 32px
          line-height 34px


    .sectificate-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 768px)
        flex-flow row wrap
        justify-content space-around
        align-items flex-start

      .sertificate
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 32px
        @media (min-width 768px)
          width 50%

        @media (min-width 1280px)
          width 25%

        a
          width auto
          margin-bottom 16px
          img
            box-shadow: 0 0 9px 1px rgba(0,0,0,0.30)

        p
          color #333333
          font-family "Proxima Nova Lt"
          font-size 18px
          font-weight 400
          letter-spacing 0.33px
          text-align center

    .links-block
      width 100%
      height auto
      display none
      @media (min-width 768px)
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        padding-top 30px
      @media (min-width 1280px)
        flex-direction row
        padding-top 40px


      .link-block
        width 212px
        height auto
        display flex
        display -webkit-flex
        justify-content flex-start
        align-items flex-start
        flex-direction row
        margin-bottom 36px
        @media (min-width 1280px)
          margin-bottom 0
          margin 0 50px

        img
          width 25px
          height 25px
          margin-right 16px

        a
          color #feb503
          font-family "Proxima Nova Lt"
          font-size 18px
          font-weight 600
          letter-spacing 0.33px
          text-decoration underline