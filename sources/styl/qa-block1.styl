.qa-block1
  width 100%
  height auto
  background-color #ffffff

  .qa-block1-content
    width 100%
    height auto
    padding-top 24px
    padding-bottom 40px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 150px
      padding-bottom 68px
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

    .qa-block1-head
      width 100%
      height auto
      margin-bottom 24px
      @media (min-width 768px)
        margin-bottom 40px

      h2
        color #1f1d21
        font-family "Proxima Nova Bold"
        font-size 26px
        font-weight 100
        line-height 28px
        text-align center
        margin-bottom 6px
        letter-spacing 0.89px
        text-transform uppercase

        br
          display none
        @media (min-width 768px)
          font-size 32px
        @media (min-width 1280px)
          br
            display block

      p
        color #29272c
        font-family "Proxima Nova Lt"
        font-size 17px
        font-weight 300
        letter-spacing 1px
        text-align center
        @media (min-width 768px)
          font-size 22px
          font-weight 300
          letter-spacing 0.4px


    .question-answer
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      margin-bottom 31px
      @media (min-width 768px)
        width 50%

      @media (min-width 1280px)
        width 40%
        margin-left 100px

      .question
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content flex-start
        align-items flex-start
        flex-direction row

        img
          margin-right 16px

        a
          color #feb503
          font-family "Proxima Nova Lt"
          font-size 18px
          font-weight 600
          letter-spacing 0.33px

          p
            display none
            color #1f1d21
            font-family "Proxima Nova Lt"
            font-weight 100
            font-size 18px
            letter-spacing 0.33px
            margin-bottom 11px
            border-bottom none

