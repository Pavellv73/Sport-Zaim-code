header
  width 100%
  height auto
  background-color #ffffff
  position fixed
  z-index 2
  transition all 0.2s ease
  @media (min-width 768px)
    background-color transparent
  @media (min-width 1240px)
    background-color transparent

  .header-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content space-between
    align-items flex-start
    flex-direction row
    padding-top 23px
    padding-bottom 23px
    box-sizing border-box

    .logo-block
      width 102px
      height 15px
      background-image url("img/logo.svg")
      background-size 100% 15px
      background-position center
      background-repeat no-repeat
      @media (min-width 768px)
        width 126px

    .menu-container
      display none
      @media (min-width 1240px)
        width auto
        display block

        ul
          display flex
          display -webkit-flex
          justify-content space-between
          align-items center
          flex-direction row

          li
            width auto
            margin 0 15px

          a
            width auto
            color #29272c
            font-family "Proxima Nova Lt"
            font-size 14px
            font-weight 700
            text-transform uppercase
            letter-spacing 1px
            transition all 0.2s ease
            position relative
            &:hover
              color #29272c
              &:before
                -webkit-transform skew(-20deg)
                -moz-transform skew(-20deg)
                -o-transform skew(-20deg)
                transition all 0.3s ease
                position absolute
                top 3px
                left -12px
                content ""
                width 4px
                height 11px
                border-radius 1px
                background-image linear-gradient(270deg, #ffc200 0%, #fb531d 100%)

    .extradition
      display none
      @media (min-width 768px)
        display block

        p
          color #29272c
          font-family "Proxima Nova Lt"
          font-size 14px
          font-weight 300
          letter-spacing 1px
          text-transform uppercase
          text-align center

          span
            color #29272c
            font-family "Proxima Nova Lt"
            font-size 22px
            font-weight 400
            letter-spacing 1px
            text-transform uppercase

    .reg-block
      display none
      @media (min-width 1240px)
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column

        .reg-link
          color #29272c
          font-family "GillSansC"
          font-size 16px
          line-height 20px
          font-weight 400
          letter-spacing 1px
          text-decoration none
          margin-right 12px
          transition all 0.2s ease
          &:hover
            color #6a6a6a
            text-decoration underline


    .burger-block
      width 24px
      height 16px
      background-image url("img/burger-orange.svg")
      background-size 100%
      background-position center center
      background-repeat no-repeat
      @media (min-width 768px)
        width 90px
        height 24px
        background-size 32px 24px
        background-position center right
        background-image url("img/burger.svg")

      @media (min-width 1240px)
        display none
    .burger-block-open
      background-image url("img/close.svg")
      background-size 100%
      background-position center center
      background-repeat no-repeat
      @media (min-width 768px)
        width 90px
        height 24px
        background-size auto
        background-position center right
      @media (min-width 1240px)
        display none
    .burger-block-open
      background-image url("img/close.svg")
      background-size auto
      background-position center right
      background-repeat no-repeat
      @media (min-width 1240px)
        display none

    .habmenu
      display none
      width 100%
      height auto
      position absolute
      top 61px
      background-image linear-gradient(to right, #ffc200 0%, #fea308 100%)
      left 0
      right 0
      padding-top 20px
      padding-bottom 24px
      @media (min-width 768px)
        top 76px

      ul
        width 100%
        height auto

        li
          width 100%
          height auto
          margin-bottom 24px
          display flex
          display -webkit-flex
          justify-content center
          align-items center


          a.reg-link
            color #29272c
            font-family "GillSansC"
            font-size 18px
            font-weight 400
            letter-spacing 1px
            text-decoration underline
            margin-bottom 24px
            transition all 0.2s ease
            &:hover
              color #6d6d6d

          a
            color #29272c
            font-family "GillSansC"
            font-size 16px
            font-weight 600
            text-transform uppercase
            letter-spacing 1px
            text-decoration none
            text-align center
            transition all 0.2s ease
            &:hover
              color #6d6d6d

    .hab-visible
      display flex

