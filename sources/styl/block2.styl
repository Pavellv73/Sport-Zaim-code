.block2
  width 100%
  height auto
  background-image linear-gradient(180deg, #ffffff 0%, #fbfafb 100%)
  position relative
  &:after
    content " "
    width 51%
    height 70%
    background-image url("img/after.png")
    background-repeat no-repeat
    background-size 42%
    background-position left
    position absolute
    top -28%
    z-index 0
    left 0
    @media (min-width 768px)
      width 24%
      height 86%

  .block2-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 20px

    .block2-head
      width 100%
      height auto
      margin-bottom 40px

      h2
        font-family "Proxima Nova Bold"
        font-size 24px
        font-weight 700
        text-transform uppercase
        color #29272c
        letter-spacing 1px
        margin-bottom 8px
        span
          color #fca70b
          letter-spacing 1px
        @media (min-width 768px)
          font-size 30px
          font-weight 900
          letter-spacing 1px
          margin-bottom 10px


      p
        color #29272c
        font-family "Proxima Nova Lt"
        font-size 18px
        font-weight 300
        letter-spacing 1px
        @media (min-width 768px)
          font-size 22px
          font-weight 300

          br
            display none

    .adveriews-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items flex-starts
      flex-flow row wrap

      .adveriew-block
        width 275px
        height auto
        background-color #ffffff
        margin-bottom 56px
        position relative
        @media (min-width 590px)
          margin-right 16px
          margin-left 16px
        @media (min-width 768px)
          margin-right 26px
          margin-left 26px


        .adveriew-img
          width 100%
          height 190px
          overflow hidden
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          box-shadow 0 4px 20px rgba(0, 0, 0, 0.1)


          img
            width 100%
            height auto


        .adveriew-text
          width 100%
          height auto
          padding-top 20px
          padding-bottom 20px
          box-sizing border-box
          padding-right 8px
          padding-left 8px

          .h3-block            

            position absolute
            top 12px
            left -15px
            width 290px
            height 44px
            background-image url("img/bg-img.png")
            background-size 100%
            background-position top center
            background-repeat no-repeat
            padding 10px 0
            box-sizing border-box

            h3
              display flex
              display -webkit-flex
              justify-content center
              align-items center
              color #29272c
              font-family "Proxima-Nova-Extra.otf"
              font-size 18px
              font-weight 900
              text-transform uppercase
              letter-spacing 1px
              text-align center
              
              @media (min-width 768px)
                font-size 19px
                font-weight 600
                margin-bottom 15px

          p
            color #29272c
            font-family "Proxima Nova Lt"
            font-size 16px
            font-weight 400

            b
              font-weight 600
            @media (min-width 768px)
              font-size 16px
              font-weight 300
              line-height 18px



